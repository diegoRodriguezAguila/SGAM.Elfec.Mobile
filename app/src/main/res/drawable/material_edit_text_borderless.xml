<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
        <solid android:color="@color/background_gray" />

        <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
    </shape>
    </item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="@color/soft_background_gray" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape>
    </item>
    <item  android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/soft_background_gray_unselected" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />

        </shape>
	</item>
	<item>
        <shape android:shape="rectangle">
            <solid android:color="@color/soft_background_gray_unselected" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape>
	</item>

</selector>