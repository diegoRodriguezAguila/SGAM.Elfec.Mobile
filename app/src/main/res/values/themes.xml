<resources>

    <style name="AppCustomTheme.AlertDialog.Dark"
           parent="Base.AppCustomTheme.AlertDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>
    <!-- Alert Dialog AppCompat -->
    <style name="AppCustomTheme.AlertDialog"
           parent="Base.AppCustomTheme.AlertDialog"/>

    <style name="Base.AppCustomTheme.AlertDialog"
           parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.AlertDialog.CustomFont.Title</item>
    </style>

    <style name="AppCustomTheme.Wallpaper.NoActionBar.Fullscreen" parent="AppCustomTheme.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="AppCustomTheme.NoActionBar.Fullscreen" parent="AppCustomTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppCustomTheme.NoActionBar" parent="AppCustomTheme.NoActionBar.Base"/>

    <style name="AppCustomTheme.NoActionBar.Base" parent="AppCustomTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppCustomTheme" parent="AppCustomTheme.Base"/>

    <style name="AppCustomTheme.ColoredBackground" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/color_primary_dark</item>
    </style>

    <style name="AppCustomTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/color_control_activated</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="colorButtonNormal">@color/color_button_normal</item>


        <item name="android:textViewStyle">@style/TextAppearance.CustomFont.TextView</item>
        <item name="buttonStyle">@style/AppStyle.Button</item>
        <item name="android:buttonStyle">@style/AppStyle.Button</item>
        <item name="editTextStyle">@style/AppStyle.EditText</item>
        <item name="android:editTextStyle">@style/AppStyle.EditText</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_material</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_material
        </item>
        <item name="android:textSelectHandle">@drawable/text_select_handle_middle_material</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="icon">@mipmap/ic_launcher</item>

        <item name="android:actionBarStyle">@style/AppStyle.ActionBar</item>
        <item name="actionBarStyle">@style/AppStyle.ActionBar</item>
        <item name="homeAsUpIndicator">@null</item>
        <item name="actionModeStyle">@style/AppStyle.ActionMode</item>

        <item name="alertDialogTheme">@style/AppCustomTheme.AlertDialog</item>
    </style>

</resources>