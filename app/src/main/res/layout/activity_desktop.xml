<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/desktop_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/color_control_normal"
    tools:context="com.elfec.sgam.view.Desktop">
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.elfec.sgam.view.widgets.FormattableDigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/clock"
        android:textSize="@dimen/txt_size_desktop_clock"
        android:lineSpacingExtra="-18sp"
        android:textAppearance="@style/TextAppearance.CustomFont.Light"
        android:textColor="@android:color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
        android:textSize="@dimen/txt_size_desktop_date"
        android:textColor="@android:color/white"
        tools:text="martes, 3 de mayo 2016"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="3"/>
    <RelativeLayout
        android:id="@+id/desktop_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/desktop_toolbar_height"
        android:background="#CA18468D">
        <View android:layout_width="match_parent"
              android:id="@+id/desktop_bar_border"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:background="#EA18468D"
              android:layout_height="1.5dp"/>
        <ImageButton
            android:id="@+id/btn_show_apps"
            android:layout_width="@dimen/show_apps_width"
            android:layout_height="@dimen/desktop_toolbar_height"
            android:onClick="btnShowApps"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/desc_show_apps"
            android:background="@drawable/toolbar_button_background"
            tools:src="@drawable/show_apps"
            android:src="@drawable/show_apps"/>
    </RelativeLayout>

</LinearLayout>
