<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="@color/soft_background_gray" />

            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />

            <stroke android:width="1.5dp" android:color="@color/color_button_normal" />
        </shape>
    </item>
    <item  android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/soft_background_gray" />

            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />

            <stroke android:width="1.5dp" android:color="@android:color/holo_red_light" />
        </shape>
	</item>
	<item>
        <shape android:shape="rectangle">
            <solid android:color="@color/soft_background_gray" />

            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />

            <stroke android:width="1.5dp" android:color="@color/color_control_normal" />
        </shape>
	</item>

</selector>