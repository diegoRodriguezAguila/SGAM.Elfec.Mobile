<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance.CustomFont.TextView" parent="android:Widget.TextView">
        <item name="fontPath">fonts/segoe_ui.ttf</item>
    </style>

    <style name="TextAppearance.AlertDialog.CustomFont.Title"
           parent="TextAppearance.CustomFont.Title">
        <item name="android:textColor">@color/color_primary</item>
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
        <item name="android:textAppearance">@style/TextAppearance.CustomFont.Title</item>
    </style>
    <style name="TextAppearance.CustomFont.Semilight" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
    </style>

    <style name="TextAppearance.CustomFont.Light" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/segoe_ui_light.ttf</item>
    </style>

    <style name="TextAppearance.CustomFont.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="fontPath">fonts/segoe_ui_light.ttf</item>
    </style>

    <style name="TextAppearance.CustomFont.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontPath">fonts/segoe_ui_light.ttf</item>
        <item name="android:textSize">@dimen/dialog_title_size</item>
    </style>

    <style name="TextAppearance.CustomFont.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
    </style>

    <style name="TextAppearance.CustomFont.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
    </style>

    <style name="AppStyle.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="titleTextStyle">@style/AppStyle.ActionBar.TextStyle</item>
    </style>

    <style name="AppStyle.ActionBar.TextStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="fontPath">fonts/segoe_ui_light.ttf</item>
    </style>

    <style name="AppStyle.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/AppStyle.ActionBar.TextStyle</item>
    </style>

    <style name="AppStyle.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/segoe_ui_semilight.ttf</item>
    </style>

    <style name="AppStyle.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/material_edit_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppStyle.EditText.Borderless" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/material_edit_text_borderless</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppCustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppCustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

